<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/headerAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14345E"
        android:padding="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:contentDescription="Back"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tvAttendanceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance Check"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAttendanceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading date..."
                android:textColor="#E0E0E0"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Edit Mode Toggle Button -->
        <ImageButton
            android:id="@+id/btnToggleEditMode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:contentDescription="Toggle Edit Mode"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerAttendance">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvClassLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student List"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Selection Counter Badge -->
            <TextView
                android:id="@+id/tvSelectionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvClassLabel"
                android:layout_marginTop="4dp"
                android:text="0 selected"
                android:textColor="#14345E"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <LinearLayout
                android:id="@+id/btnAddStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_add"
                    app:tint="#14345E"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Add Student"
                    android:textColor="#14345E"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvAttendanceCheck"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardInfo"
        app:layout_constraintBottom_toTopOf="@id/btnSaveAttendance"/>

    <!-- Floating Delete Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnDeleteSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Delete"
        android:visibility="gone"
        app:icon="@android:drawable/ic_menu_delete"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSaveAttendance"
        tools:visibility="visible"/>

    <Button
        android:id="@+id/btnSaveAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="SAVE ATTENDANCE"
        android:backgroundTint="#14345E"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>